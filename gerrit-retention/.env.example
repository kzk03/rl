# Gerrit開発者定着予測システム - 環境変数テンプレート

# Gerrit接続設定
GERRIT_URL=https://gerrit.example.com
GERRIT_USERNAME=your_username
GERRIT_PASSWORD=your_password_or_token

# データベース設定（オプション）
DATABASE_URL=sqlite:///gerrit_retention.db

# ログレベル設定
LOG_LEVEL=INFO
LOG_FORMAT=json

# 機械学習設定
ML_RANDOM_SEED=42
ML_DEVICE=auto  # auto, cpu, cuda

# API設定
API_RATE_LIMIT=100  # requests per minute
API_TIMEOUT=30      # seconds

# キャッシュ設定
CACHE_ENABLED=true
CACHE_TTL=3600      # seconds

# 開発環境設定
DEVELOPMENT_MODE=false
DEBUG_MODE=false

# 実験追跡設定（オプション）
MLFLOW_TRACKING_URI=http://localhost:5000
WANDB_PROJECT=gerrit-retention

# セキュリティ設定
SECRET_KEY=your_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here