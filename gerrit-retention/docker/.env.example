# Gerrit開発者定着予測システム - 環境変数テンプレート

# 環境設定
ENVIRONMENT=production
COMPOSE_PROJECT_NAME=gerrit-retention

# Gerrit設定
GERRIT_URL=https://gerrit.example.com
GERRIT_USERNAME=your_username
GERRIT_PASSWORD=your_password
GERRIT_PROJECTS=project1,project2,project3

# データベース設定
POSTGRES_PASSWORD=secure_password_here
POSTGRES_PORT=5432
POSTGRES_MEMORY_LIMIT=2G

# Redis設定
REDIS_PORT=6379
REDIS_MEMORY=512mb
REDIS_MEMORY_LIMIT=1G

# アプリケーション設定
APP_PORT=8080
METRICS_PORT=8081
APP_MEMORY_LIMIT=4G
APP_CPU_LIMIT=2.0
APP_MEMORY_RESERVATION=2G
APP_CPU_RESERVATION=1.0
APP_REPLICAS=3

# ワーカー設定
WORKER_REPLICAS=2
WORKER_MEMORY_LIMIT=2G
WORKER_CPU_LIMIT=1.0
WORKER_MEMORY_RESERVATION=1G
WORKER_CPU_RESERVATION=0.5

# ログ設定
LOG_LEVEL=INFO
LOG_FORMAT=json

# 機械学習設定
ML_DEVICE=auto
ML_RANDOM_SEED=42

# 監視設定
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin_password_here
MLFLOW_PORT=5000

# Nginx設定
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# 通知設定（オプション）
EMAIL_USERNAME=alerts@example.com
EMAIL_PASSWORD=email_password_here
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_key

# Jupyter設定（開発環境用）
JUPYTER_TOKEN=development

# セキュリティ設定
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# パフォーマンス設定
OMP_NUM_THREADS=4
MKL_NUM_THREADS=4
NUMEXPR_MAX_THREADS=4

# Docker Compose設定
COMPOSE_HTTP_TIMEOUT=120
DOCKER_CLIENT_TIMEOUT=120